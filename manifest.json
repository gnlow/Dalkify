{
  "manifest_version": 2,
  "name": "Dalkify",
  "description": "Use Dalkak extension in any other platform",
  "version": "0.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://playentry.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["background.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": ["node_modules/dalkak/dist/dalkak.umd.js", "dalkify.js", "content.js"],
  "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'"
}